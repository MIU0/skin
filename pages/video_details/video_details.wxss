page{
  background: #f8f8f8;
}
.video-item{
  position: relative;
  width: 100%;
  height: 35vh;
}
video{
  width: 100%;
  height: 100%;
}
.video-cover{
  position: absolute;
   width: 100%;
  height: 35vh;
  left: 0;
  top: 0;
}
.video-play-btn{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto
}
.kf_button{
  background: #fff;
  padding:0;
  margin-top: 10rpx;
  height: 50rpx;
  display: flex;
}
.kf_button image{
  width: 50rpx;
  height:50rpx;
  margin-top: 0;
}
.kf_button::after{
  border: none;
}
.video-duration{
  position: absolute;
  right: 10px;
  bottom: 10px;
  color: #fff;
  z-index: 1000;

}
.cover_video{
  width: 100%;
    height: 35vh;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 990;
    opacity: 0.7;
}
.cover_video_text{
  position: fixed;
