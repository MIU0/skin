<view>
  <view class='video_pay_title'>购买内容</view>
  <view class='video_pay_details'>
 
    <view class='video_pay_details_img'>
   <image src='{{video_pay.img_url}}' mode='widthFix'></image>
        <view class='video_log'>
          <image src='../../images/vedio.png' mode='aspectFit'></image>
        </view>
    </view>
    <view class='video_pay_details_info'>
      <view class='video_pay_details_name'>{{video_pay.translate_name}}</view>
      <view class='video_pay_details_time'>{{video_pay.create_time}}</view>
    </view>
    <view class='video_pay_details_price'>
      <text>￥{{video_pay.price}}</text>\n
      <text>x1</text>
    </view>
  </view>
