      <view>使用优惠</view>
      <image class='info_right' src='../../images/right.png'></image>
    </view>
  </view> -->
  <!-- 合计 -->
  <view class='video_pay_youhui'>
    <view>合计</view>
    <view class='video_pay_youhui_right'>
      <view class='sum_price'>￥{{video_pay.price}}</view>

    </view>
  </view>
