.video_all{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.video_one{
width: 90%;
}
.video_one_title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;

}
.video_one_list{
  width: 100%;
  height: 162rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.video_one_list_left {
  width: 33%;
  height: 100%;
  border-radius: 10rpx;
  margin-right: 10rpx;
  position: relative;
}
.video_one_list_left image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.video_list_right {
  width: 64%;
  height: 100%;
  border-radius: 10rpx;
}
.right_one{
  width: 100%;
  height: 27%;
  font-size: 28rpx;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
   word-break: break-all;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}
.right_two{
  width: 100%;
  height: 25%;
  font-size: 24rpx;
  color: #c2c2c2;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
   word-break: break-all;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}
.video_right_bottom{
  width: 100%;
  height: 33%;
 display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #c2c2c2;
}
.video_right_bottom_one{
display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.video_right_bottom_two{
  color:#ff484e; 
}
.bottom_one_time{
  border-right:1px solid #e2e2e2;
  width:88rpx;
}
.bottom_one_num{
