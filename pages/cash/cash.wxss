/* pages/cash/cash.wxss */
page{
  background: #ededed;
  padding: 40rpx 0;
  box-sizing: border-box;
  
}
.cash_all{
width: 90%;
height: auto;
background: #fff;
margin: 0 auto;
  
}
.cash_title{
  width:100%;
  height: 150rpx;
  line-height: 150rpx;
  font-size: 30rpx;
  text-align: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  background: #fbfbfb; 
}

.cash_con{
  width:100%;
  padding: 0 40rpx 10rpx 40rpx;
  box-sizing: border-box;
}
.cash_con_title{
   width:100%;
   height: 100rpx;
   line-height:100rpx;
   font-size: 30rpx;
}
.cash_con_price{
   width:100%;
   height: 100rpx;
   line-height:100rpx;
   border-bottom: 1px solid #dedede;
   font-size: 30rpx;
   display: flex;
}
.cash_con_price text:first-child{
  width: 14%;
font-weight: 600;
font-size: 70rpx !important;
}
.cash_con_price input{
  width:86%;
  height: 100rpx;
   line-height:100rpx;
}
.cash_con_hint{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  font-size: 26rpx;
}
.cash_con_hint view:first-child{
  color: #9b9b9b;
  
}
.cash_con_hint view:last-child{
color: #616775;
}
.cash_bottom{
  width: 100%;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background: #f38e36;
  border-radius: 10rpx;
  margin-top: 40rpx;
  margin-bottom: 25rpx;
}
.cash_select{
width: 100%;
}
.radio-group{
  width: 100%;
  height: 100rpx;
  display: flex;
  font-size: 28rpx;
  color: #616775;
  /* border: 1px solid red */
}
.radio{
  width: auto;
   display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 20rpx;
}
radio{
  /* border-radius: 50%; */
  width: 30rpx;/* 最好是4的倍数，不然会不在中间 */
  height: 30rpx;
  font-size: 0;/* 让边框重合 */
  margin-right: 10rpx;
 
}

radio .wx-radio-input{
   border-radius: 50%;/* 圆角 */
   width: 30rpx;
   height: 30rpx;

}
radio .wx-radio-input.wx-radio-input-checked::before{
   /* border-radius: 50%; */
   width: 20rpx; 
   height:20rpx; 
   text-align: center;
   font-size:0rpx; /* 对勾大小 去掉 */
   color: #fff !important; 
   background: #f38e36 !important;
   border-radius: 50%;
}
radio .wx-radio-input.wx-radio-input-checked{
  width: 30rpx;
   height: 30rpx;
  border: 1px solid #dedede !important;
    background: #fff !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
     text-align: center !important;

}
.cash_con_num{
     width:100%;
   height: 100rpx;
   line-height:100rpx;
   border-bottom: 1px solid #dedede;
   font-size: 30rpx;
   display: flex;
}
.cash_con_num text:first-child{
  width: 14%;
font-size: 28rpx !important;
/* border: 1px solid red; */
}
.cash_con_num input{
  width:86%;
  height: 100rpx;
   line-height:100rpx;
}
button::after{
  border: none
}

