/* pages/my_friend/my_friend.wxss */
page{
  background: #f9f9f9;
  padding-top: 6vh;
  box-sizing: border-box;
}
.my_friend{
  width: 80%;
  /* height: 70vh; */
  background: #fff;
  margin: 0 auto;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.my_friend image{
  width: 100%;
  height: 100%;
}
.my_friend_bottom{
  width: 43%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  margin: 0 auto;
}
.my_friend_bottom image{
width: 53rpx;
height: 100rpx;
margin-right: 15rpx;
}
.my_friend_bottom view{
  font-size: 28rpx;
  color: #2c2c2c;
}
.company_remark {
  width: 100%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  color: #c2c2c2;
  font-size: 26rpx;
  background: #f9f9f9;
  padding: 20rpx 0;
}