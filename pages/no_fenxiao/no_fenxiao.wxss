/* pages/no_fenxiao/no_fenxiao.wxss */
.be_fenxiao{
  width: 100%;
  height: 9vh;
  background:#46bc04;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 9vh; 
  position: fixed;
  bottom: 0;
}
.fx_content{
width: 100%;
height: 91vh;
line-height: 91vh;
text-align: center;
font-size: 28rpx;
color: #c2c2c2;
}

/* 弹出层 */
.fenxiao_pop{
      width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 990;
    opacity: 0.7;
}
.fenxiao_pop_body{
  position: fixed;
  width: 75%;
  height: 35vh;
  left: 0;
  right: 0;
  margin:  auto;
  bottom: 0;
  top: 0;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
}
.body_title{
width: 100%;
height: 80rpx;
line-height: 80rpx;
border-bottom: 1px solid #eee;
font-size: 28rpx;
text-align: center;
margin-bottom: 15rpx;
}
.body_con{
  width: 90%;
  margin: 0 auto;
}
.body_con_phone{
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
   align-items: flex-end; 
}

.body_con_phone_left{
  width: 30%;
  height: 100%;
  line-height: 70rpx;
  font-size: 28rpx;
  
}
.body_con_phone input{
   font-size: 28rpx;
   width: 70%;
   height: 100%;
line-height: 70rpx;
   border-bottom:2rpx solid #ddd;

}
.phone{
   color: #b9b9b9;
}
.placeholder_num{
  width: 200rpx !important;
}
.get_num{
  width:83px;
  height: 72%;
  text-align: center;
  line-height: 50rpx;
  padding: 0;
  font-size: 20rpx;
  color: #46bc04
}
.get_num::after{
  border: none;
}
.body_bottom{
  width:90%;
  padding: 0 40rpx;
  box-sizing: border-box;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 39rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* border: 1px solid red; */
 
  
}
.body_bottom view{
width: 35%;
 height: 58rpx;
  line-height: 58rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  border:1px solid #ddd
}

