page{
  background: #f8f8f8;
  
}
.fx_list{
  width:94%;
  height: 173rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #fff;
   margin-bottom: 15rpx;
   padding: 0 18rpx;
  }
  .fx_list_left{
    width: 100%;
    height: 100%;
    /* background: pink; */
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .fx_list_left image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 16rpx;
  }
.list_left_right{
  font-size: 26rpx;
}
.list_left_right view:last-child{
  color: #a7a7a7;
  margin-top: 10rpx;
}
.fx_list_right{
  display: flex;
    flex-direction: row;
    align-items: center;
}
