.qian{
  width: 100%;
  padding: 5vh 30rpx 3vh 30rpx;
  box-sizing: border-box;
  text-align: center;
  border-bottom: 2rpx solid rgb(236, 233, 233);
  color: #333;
}
.qian image{
  width:300rpx;
  height:150rpx; 
}
.qian view:nth-child(2){
  font-size: 28rpx;
  margin: 10rpx 0;
}
.qian view:nth-child(3){
  font-size: 50rpx;
  margin-bottom: 53rpx;
}
.qian view:nth-child(4){
  width: 100%;
  height: 5.5vh;
  line-height: 5.5vh;
  color: white;
  font-size: 28rpx;
  background-color:#f38e36; 
  border-radius: 10rpx;
}

.pay{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: white;
  color: #333;
}
.pay .pay-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 7vh;
  line-height: 7vh;
  align-items: center;
  border-bottom: 2rpx solid rgb(236, 233, 233);
}
.pay .pay-item image{
  width: 30rpx;
  height: 30rpx;
  opacity: 0.3;
}

.tab{
  width: 100%;
  height: 7vh;
  line-height: 7vh;
  font-size: 28rpx;
  color: #999;
  background-color: #fafafa;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 2rpx solid #ececec;
}
.tab > view{
  width: 33.33%;
}
.tab > view:nth-child(2){
  border-left:2rpx solid #ececec ;
  border-right:2rpx solid #ececec 
}
.kong{
  width: 100%;
  height: 7vh;
}